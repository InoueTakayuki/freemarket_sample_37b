-if @user.id == current_user.id
  %h2 住所入力
  = form_for [@user, @address], url: user_addresses_path do |f|
    - @address.errors.full_messages.each do |message|
      = message
    .field
      = f.label :お名前
      = f.label :必須
      %br/
      = f.text_field :family_name, autofocus: true, autocomplete: "family_name", placeholder: "例) 山田"
      = f.text_field :first_name, autocomplete: "first_name", placeholder: "例) 太郎"
    .field
      = f.label :お名前カナ
      = f.label :必須
      %br/
      = f.text_field :family_name_kana, autocomplete: "family_name_kana", placeholder: "例) ヤマダ"
      = f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "例) タロウ"
    .field
      = f.label :郵便番号
      = f.label :必須
      %br/
      = f.text_field :postal_code, autocomplete: "postal_code", placeholder: "例) 123-4567"
    .field
      = f.label :都道府県
      = f.label :必須
      %br/
      = f.select :prefecture, Address.prefectures.keys, {prompt: '選択してください'}
    .field
      = f.label :市区町村
      = f.label :必須
      %br/
      = f.text_field :city, autocomplete: "city", placeholder: "例) 横浜市緑区"
    .field
      = f.label :番地
      = f.label :必須
      %br/
      = f.text_field :street_number, autocomplete: "street_number", placeholder: "例) 青山1-1-1"
    .field
      = f.label :建物
      = f.label :任意
      %br/
      = f.text_field :building, autocomplete: "building", placeholder: "例) 柳ビル103"
    .field
      = f.label :電話
      = f.label :任意
      %br/
      = f.text_field :telephone, autocomplete: "telephone", placeholder: "例) 09012345678"
    .actions
      = f.submit "次に進む"
-else
  redirect_to root_path
