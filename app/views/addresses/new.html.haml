%head
  %script{async: "async", defer: "defer", src: "https://www.google.com/recaptcha/api.js"}
.single-header
  .wrapper.clearfix
    %h1
      %a{href:"/"}
        %img{alt:"mercari", src:"//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?110229100"}/
    %nav.progress-bar.signup-bar
      %ol
        %li
          会員情報
          .progress-status.member.active
        %li.active
          住所入力
          .progress-status.adress.active
        %li
          支払い方法
          .progress-status.cash
        %li
          完了
          .progress-status.ok
%main.single-main
  %section.l-single-container
    -if @user.id == current_user.id
      %h2.l-single-head 住所入力
      .l-single-inner
        .l-single-content
          = form_for [@user, @address], url: user_addresses_path do |f|
            - @address.errors.full_messages.each do |message|
              = message
            .form-group
              = f.label :お名前
              %span.form-repuire 必須
              %br/
              = f.text_field :family_name, autofocus: true, autocomplete: "family_name", placeholder: "例) 山田"
              = f.text_field :first_name, autocomplete: "first_name", placeholder: "例) 太郎"
            .form-group
              = f.label :お名前カナ
              %span.form-repuire 必須
              %br/
              = f.text_field :family_name_kana, autocomplete: "family_name_kana", placeholder: "例) ヤマダ"
              = f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "例) タロウ"
            .form-group
              = f.label :郵便番号
              %span.form-repuire 必須
              %br/
              = f.text_field :postal_code, autocomplete: "postal_code", placeholder: "例) 123-4567"
            .form-group
              = f.label :都道府県
              %span.form-repuire 必須
              %br/
              = f.select :prefecture, Address.prefectures.keys, {prompt: '選択してください'}
            .form-group
              = f.label :市区町村
              %span.form-repuire 必須
              %br/
              = f.text_field :city, autocomplete: "city", placeholder: "例) 横浜市緑区"
            .form-group
              = f.label :番地
              %span.form-repuire 必須
              %br/
              = f.text_field :street_number, autocomplete: "street_number", placeholder: "例) 青山1-1-1"
            .form-group
              = f.label :建物
              %span.form-repuire-any 任意
              %br/
              = f.text_field :building, autocomplete: "building", placeholder: "例) 柳ビル103"
            .form-group
              = f.label :電話
              %span.form-repuire-any 任意
              %br/
              = f.text_field :telephone, autocomplete: "telephone", placeholder: "例) 09012345678"
            .actions
              = f.submit "次に進む", class: "recaptcha"
    -else
      redirect_to root_path
=render"mypages/mypage.footer"
