.wrap#create_header
  %header.single-header
    %h1
      %a{href:"https://www.mercari.com/jp/"}
        %img{alt:"mercari", src:"//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?110229100"}/

    - unless user_signed_in?
      - if current_page?(new_user_registration_path(current_user))
        %nav.progress-bar.signup-bar
          %ol.clearfix
            %li.active
              会員登録
              .progress-status
            %li
              住所入力
              .progress-status
            %li
              支払い方法
              .progress-status
            %li
              完了
              .progress-status

    - if user_signed_in?
      - if current_page?(new_user_address_path(current_user))
        %nav.progress-bar.signup-bar
          %ol.clearfix
            %li.through
              会員登録
              .progress-status
            %li.active
              住所入力
              .progress-status
            %li
              支払い方法
              .progress-status
            %li
              完了
              .progress-status

      - elsif current_page?(new_user_payment_path(current_user))
        %nav.progress-bar.signup-bar
          %ol.clearfix
            %li.through
              会員登録
              .progress-status
            %li.through
              住所入力
              .progress-status
            %li.active
              支払い方法
              .progress-status
            %li
              完了
              .progress-status

      - elsif current_page?(user_payments_path(current_user))
        %nav.progress-bar.signup-bar
          %ol.clearfix
            %li.through
              会員登録
              .progress-status
            %li.through
              住所入力
              .progress-status
            %li.through
              支払い方法
              .progress-status
            %li.active
              完了
              .progress-status
